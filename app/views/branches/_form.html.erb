<%= form_for @branch,  :html => { :class => "zaform"} do |f| %>
	<%= render 'shared/error_messages', :target => @branch %>	  
	<fieldset> 
		<legend>Branch Details</legend> 
		<ol> 	
			<li>
				<%= f.label :name %>
			    <%= f.text_field :name %>
		    </li>
		    <li>
			    <%= f.label :id_no, "ID" %>
			    <%= f.text_field :id_no %>
		    </li>
		    <li>
			    <%= f.label :tipe, "Type" %>
			    <%= f.text_field :tipe %>
		    </li>
		    <li>
			    <%= f.label :principal %>
			    <%= f.text_field :principal %>
		    </li>
		    <li>
			    <%= f.label :address %>
			    <%= f.text_area :address, :rows => 3 %>
		    </li>
		    <li>
			    <%= f.label :city %>
			    <%= f.text_field :city %>
		    </li>
		    <li>
			    <%= f.label :state %>
			    <%= f.text_field :state %>
		    </li>
		    <li>
			    <%= f.label :pin %>
			    <%= f.text_field :pin %>
			</li>
		</ol>					
	</fieldset> 	
	<%= f.submit %>
<% end %>
