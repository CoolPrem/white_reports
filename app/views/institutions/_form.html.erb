<%= form_for @institution,  :html => { :class => "zaform"} do |f| %>
	<%= render 'shared/error_messages', :target => @institution %>	  
	<fieldset> 
		<legend>Institution Details</legend> 
		<ol> 	
			<li>
				<%= f.label :name %> 
			    <%= f.text_field :name %>
		    </li>
		    <li>
			    <%= f.label :id_no, "Institution ID" %> 
			    <%= f.text_field :id_no %>
		    </li>
		    <li>
			    <%= f.label :ceo, "CEO" %> 
			    <%= f.text_field :ceo %>
		    </li>
		    <li>
			    <%= f.label :registered_address, "Registered Address" %> 
			    <%= f.text_area :registered_address, :rows => 3 %>
		    </li>
		    <li>
			    <%= f.label :city %> 
			    <%= f.text_field :city %>
		    </li>
		    <li>
			    <%= f.label :state %> 
			    <%= f.text_field :state %>
		    </li>
		    <li>
			    <%= f.label :pin %>  
			    <%= f.text_field :pin %>
			</li>	
		</ol>					
	</fieldset> 				 
    <p> <%= f.submit %> </p>
<% end %>
