<%= form_for(@institution) do |f| %>
	<%= render 'shared/error_messages', :target => @institution %>
	  
  	<div class="field">
		<%= f.label :name %><br />
	    <%= f.text_field :name %>
	 </div>
	  
	<div class="field">
	    <%= f.label :id_no, "Institution ID" %><br />
	    <%= f.text_field :id_no %>
	</div>
	  
	<div class="field">
	    <%= f.label :ceo, "CEO" %><br />
	    <%= f.text_field :ceo %>
	</div> 
	
	<div class="field">
	    <%= f.label :registered_address, "Registered Address" %><br />
	    <%= f.text_field :registered_address %>
	</div> 
	
	<div class="field">
	    <%= f.label :city %><br />
	    <%= f.text_field :city %>
	</div> 
	
	<div class="field">
	    <%= f.label :state %><br />
	    <%= f.text_field :state %>
	</div> 		
	
	<div class="field">
	    <%= f.label :pin %> <br />
	    <%= f.text_field :pin %>
	</div> 		
		  
	<div class="actions">
	    <%= f.submit %>
	</div>

<% end %>
