<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table>
	<tr>
		<th> <%=sortable "name" %></th>
		<th><%= sortable "id_no", "ID" %></th>
		<th><%= sortable "ceo", "CEO" %></th>
		<th> <%= "Registered Address" %></th>
		<th>Actions</th>
	</tr>

	<% @institutions.each do |institution| %>
		<tr>
			<td><%= link_to institution.name, institution %></td>
			<td><%= institution.id_no %></td>
			<td><%= institution.ceo %></td>
			<td><%= institution.registered_address %>, <br> <%= institution.city %>, <%= institution.state %>, <br> <%= institution.pin %></td>
			<td> <%= link_to 'Edit', edit_institution_path(institution) %> | 
				    <%= link_to 'Destroy', institution, :confirm => 'Are you sure?', :method => :delete %> </td>
		</tr>
	<% end %>
</table>		
<%= will_paginate @institutions %>