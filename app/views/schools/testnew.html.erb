<div id="content">
	<h1><%= @school.name %> </h1>
	<h2> Add Tests  </h2>
	<%= form_for (@school, :url => testcreate_school_path(@school)) do |f| %>
		
		<%= render 'shared/error_messages', :target => @school %>
		<%= f.fields_for :tests do |builder| %>	
	 	  <%= render "test_fields", :f => builder %>	 	  
		<% end %>
		
     	<p> <%= link_to_add_fields "Add Test", f, :tests %> </p>	 	
     	<p > <%= f.submit  "Update Tests" %> </p>
     	
	<% end %>
</div>