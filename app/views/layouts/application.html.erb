<!DOCTYPE html>
<html>
<head>
  <title>WhiteReports</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults  %>
  <%= csrf_meta_tag %>
</head>
<body>
	
<div id="page-container">
	
	<div id="main-nav">
		<h1> z-Axis </h1>
	</div>
	
	<div id="header">
		<% if current_profile %>
			<h3>
				 Logged in as <%= link_to current_profile.email, teacher_path(current_profile.user_profile) %>.
				<%= link_to "Log out", log_out_path %> 			
			</h3>
		<% else %>
			<h3>
				<%= link_to "Sign up", sign_up_path %> or
				<%= link_to "log in", log_in_path %>
			</h3>
		<% end %>
	</div>
	
	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
	<%= yield %>
			
	<div id="footer">
		<div id="altnav">
			<a href="#">About</a> - 
			<a href="#">Services</a> - 
			<a href="#">Portfolio</a> - 
			<a href="#">Contact Us</a> - 
			<a href="#">Terms of Trade</a>
		</div>
		Copyright Â© Enlighten Designs
	
		Powered by <a href="http://www.enlightenhosting.com/">Enlighten Hosting</a> and
		<a href="http://www.vadmin.co.nz/">Vadmin 3.0 CMS</a>
	</div>

</div>


</body>
</html>
