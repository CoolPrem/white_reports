<div class = "tfields">
	<div class="field">
		<%= f.label :name %> <br>
		<%= f.text_field :name, :size => 15 %>
	</div>
	<div class="field">
		<%= f.label :id_no, "ID number"%> <br>
		<%= f.text_field :id_no, :size => 10 %>
	</div>
	<div class="field">
	 	<%= f.label :female, "Gender" %> <br>
	 	<% if f.object.new_record?%>
			<%= f.select :female, options_for_select([  ["Female", true], ["Male", false] ] ) , {:include_blank => 'None'}  %>
		<% else %>
			<%= f.select :female, options_for_select([  ["Female", true], ["Male", false] ], f.object.female? ) , {:include_blank => 'None'}  %>
		<% end %>
	</div>
	<div class="field">
		<%= f.label :dob, "DOB"%><br>
		<%= f.date_select :dob, {:prompt => true, :start_year => Time.now.year - 30, 
													:end_year => Time.now.year, :use_month_numbers => true, 
													:order => [:day, :month, :year]} %>
	</div>
 
	<%= link_to_remove_fields "remove", f %><br /> <br /> <br />
 </div>
	